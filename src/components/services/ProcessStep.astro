---
export interface Props {
  stepNumber: number;
  title: string;
  description: string;
  icon?: string;
}

const { stepNumber, title, description, icon } = Astro.props;
---

<div class="text-center group">
  <div class="w-20 h-20 bg-gradient-to-br from-primary-600 to-primary-700 rounded-full mx-auto mb-6 flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all duration-300 group-hover:scale-105">
    {icon ? (
      <div class="w-8 h-8 text-white" set:html={icon}></div>
    ) : (
      <span class="text-white font-bold text-2xl">{stepNumber}</span>
    )}
  </div>
  <h3 class="text-xl font-semibold text-slate-900 mb-2">{title}</h3>
  <p class="text-slate-600 leading-relaxed">{description}</p>
</div>
