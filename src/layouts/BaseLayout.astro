---
import '../styles/globals.css';
import Seo from '../components/Seo.astro';
import Navbar from '../components/Navbar';
import Footer from '../components/Footer.astro';
import CookieConsent from '../components/legal/CookieConsent';
import ChatbotWidget from '../components/ChatbotWidget';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
  noindex?: boolean;
}

const { 
  title, 
  description = "Abogado especializado con más de 15 años de experiencia. Consulta gratuita en derecho laboral, familiar y penal. Contacta ahora.",
  image = "/og-image.jpg",
  canonical,
  noindex = false
} = Astro.props;

const canonicalURL = canonical || Astro.url.href;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    
    <Seo 
      title={title}
      description={description}
      image={image}
      canonical={canonicalURL}
      noindex={noindex}
    />
    
    <!-- Preload critical fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- Theme color -->
    <meta name="theme-color" content="#0E4A69">
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    
    <!-- Security headers -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff">
    <meta http-equiv="X-Frame-Options" content="DENY">
    <meta http-equiv="Referrer-Policy" content="strict-origin-when-cross-origin">
    
    <script is:inline>
      // Unified chatbot script - optimized and robust
      (() => {
        const STATE = {
          pending: false,
          retries: 0,
          maxRetries: 30,
          timer: null,
          initialized: false
        };

        const clickToggle = () => {
          const container = document.querySelector('#n8n-chat');
          if (!container) {
            console.log('[Chat] Container not found');
            return false;
          }

          // Multiple strategies to find the toggle button
          const selectors = [
            '[data-test-id*="toggle"]',
            '[aria-label*="chat"]',
            '[aria-label*="abrir"]',
            '.toggle',
            'button[class*="toggle"]',
            'button[class*="chat"]',
            'button[class*="open"]',
            'button',
            '[role="button"]'
          ];

          let toggle = null;
          for (const selector of selectors) {
            toggle = container.querySelector(selector);
            if (toggle) {
              console.log(`[Chat] Found toggle with selector: ${selector}`);
              break;
            }
          }

          if (!toggle) {
            console.log('[Chat] No toggle button found');
            return false;
          }

          // Use requestAnimationFrame to avoid blocking
          requestAnimationFrame(() => {
            try {
              toggle.dispatchEvent(
                new MouseEvent('click', { bubbles: true, cancelable: true })
              );
              console.log('[Chat] Toggle clicked successfully');
            } catch (error) {
              console.error('[Chat] Error clicking toggle:', error);
            }
          });
          return true;
        };

        const schedule = () => {
          if (clickToggle()) {
            STATE.pending = false;
            STATE.retries = 0;
            if (STATE.timer) {
              clearTimeout(STATE.timer);
              STATE.timer = null;
            }
            return;
          }

          if (STATE.retries >= STATE.maxRetries) {
            console.log('[Chat] Max retries reached, giving up');
            STATE.pending = false;
            return;
          }

          STATE.retries += 1;
          STATE.timer = window.setTimeout(schedule, 150);
        };

        window.n8nChatOpen = () => {
          console.log('[Chat] Opening chat requested');
          STATE.pending = true;
          STATE.retries = 0;
          
          // Use requestIdleCallback if available, otherwise setTimeout
          if (window.requestIdleCallback) {
            window.requestIdleCallback(schedule);
          } else {
            setTimeout(schedule, 100);
          }
        };

        // Listen for chat ready event
        window.addEventListener('mgm:chat-ready', () => {
          console.log('[Chat] Chat ready event received');
          STATE.initialized = true;
          if (STATE.pending) {
            schedule();
          }
        });

        // Unified click handler for all chat buttons
        document.addEventListener('click', (event) => {
          const target = event.target;
          if (!(target instanceof Element)) return;
          
          const chatButton = target.closest('[data-chat-open]');
          if (!chatButton) return;

          console.log('[Chat] Chat button clicked');
          event.preventDefault();
          event.stopPropagation();
          
          window.n8nChatOpen();
        }, { passive: false });

        // Initialize after DOM is ready
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', () => {
            console.log('[Chat] DOM ready, chat system initialized');
          });
        } else {
          console.log('[Chat] DOM already ready, chat system initialized');
        }
      })();
    </script>
  </head>
  
  <body class="min-h-screen bg-background text-foreground font-sans antialiased">
    <!-- Skip to main content for accessibility -->
    <a 
      href="#main-content" 
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary-600 text-white px-4 py-2 rounded-md z-50"
    >
      Saltar al contenido principal
    </a>
    
    <!-- Navigation -->
    <Navbar client:idle />
    
    <!-- Main content -->
    <main id="main-content" class="min-h-screen">
      <slot />
    </main>
    
    <!-- Footer -->
    <Footer />
    
    <!-- Legal Components -->
    <CookieConsent client:idle />
    
    <!-- Chatbot Anchor + Widget -->
    <div id="n8n-chat" class="chatbot-slot" aria-live="polite" aria-label="Asistente virtual"></div>
    <ChatbotWidget client:idle />
    
    <!-- Analytics (se agregará cuando se configure) -->
    <!-- <script is:inline>
      // Google Analytics o Vercel Analytics
    </script> -->
  </body>
</html>
